<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/night_mode_titles"
        android:entryValues="@array/night_mode_values"
        android:key="@string/pref_key_night_mode"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="%s"
        android:title="Dark mode"
        app:iconSpaceReserved="false" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/spoiler_pref_titles"
        android:entryValues="@array/spoiler_pref_values"
        android:key="@string/pref_key_spoiler"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="%s"
        android:title="Default spoiler level"
        app:iconSpaceReserved="false" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/pref_key_spoiler_completed"
        android:summary="Enable all spoilers for a VN if its status is &quot;Finished&quot;"
        android:title="Spoil me if finished"
        app:iconSpaceReserved="false" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_key_nsfw"
        android:summary=""
        android:title="Always show NSFW content"
        app:iconSpaceReserved="false" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/pref_key_browser"
        android:summary="Clicking on links to external websites (like Wikipedia) opens these links inside the app (requires Chrome)"
        android:title="In-app browser"
        app:iconSpaceReserved="false" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/pref_key_shared_transitions"
        android:summary="Use transition animations when navigating between screens (e.g. when opening a VN page)."
        android:title="Use transition animations"
        app:iconSpaceReserved="false" />

    <SwitchPreference
        android:key="@string/pref_key_gdpr_crashlytics"
        android:summary="When the app crashes, send info to the developers to help fix the bug."
        android:title="Send crash reports"
        app:iconSpaceReserved="false" />
</PreferenceScreen>